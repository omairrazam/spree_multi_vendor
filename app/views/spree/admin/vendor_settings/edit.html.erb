
<% content_for :page_title do %>
  <%= @vendor.try(:name) %>
  <% if @vendor.persisted? %>
    <%= link_to_with_icon 'translate', nil, spree.admin_translations_path('vendors', @vendor.id), title: Spree.t(:'i18n.translations'), class: 'btn btn-sm btn-primary' %>
  <% end %>
<% end %>

<%= form_for [:admin, @vendor], url: admin_vendor_settings_url do |f| %>

  <fieldset>
    <%= render partial: 'spree/shared/error_messages', locals: { target: @vendor } %>

    <div class="col-md-12">
      <h2>General Information</h2>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.field_container :name do %>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', required: true %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.field_container :about_us do %>
            <%= f.label :about_us %>
            <%= f.text_area :about_us, class: 'form-control' %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.field_container :contact_us do %>
            <%= f.label :contact_us %>
            <%= f.number_field :contact_us, class: 'form-control', required: true %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.field_container :address do %>
            <%= f.label :address %>
            <%= f.text_field :address, class: 'form-control', required: true %>
          <% end %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.field_container :email do %>
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :speciality do %>
            <%= f.label :speciality %> (Write it down in Comma Seperated formate eg: "Formal Abaya", "Stiched")
            <%= f.text_field :speciality, class: 'form-control', required: true %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :travel_distance do %>
            <%= f.label :travel_distance %>
            <%= f.number_field :t_distance, class: 'form-control', required: true %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :google_address_url do %>
            <%= f.label :store_pin_location %> (Google Url)
            <%= f.text_field :google_address_url, class: 'form-control' %>
          <% end %>
        </div>



      </div>
    </div>

    <div class="col-md-12">
      <h2>Social Media Links</h2>
      <div class="col-md-6">
        <div class="form-group">
          <%= f.field_container :facebook_lnk do %>
            <%= f.label :facebook_lnk %>
            <%= f.text_field :fb_lnk, class: 'form-control' %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :pintrest_lnk do %>
            <%= f.label :pintrest_lnk %>
            <%= f.text_field :pintrest_lnk, class: 'form-control' %>
          <% end %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.field_container :twitter_lnk do %>
            <%= f.label :twitter_lnk %>
            <%= f.text_field :twitter_lnk, class: 'form-control' %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.field_container :whatsapp_lnk do %>
            <%= f.label :whatsapp_lnk %>
            <%= f.text_field :whatsapp_lnk, class: 'form-control' %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <h2>Store Schedule</h2>
      <div class="col-md-6">

        <div class="form-group">
           <%= f.field_container :mon_hrs do %>
            <%= f.label :monday_hours %>
            <%= f.text_field :mon_hrs, class: 'form-control', required: true %>
          <% end %>
        </div>

        <div class="form-group">
           <%= f.field_container :tue_hrs do %>
            <%= f.label :tuesday_hours %>
            <%= f.text_field :tue_hrs, class: 'form-control', required: true %>
          <% end %>
        </div>
        <div class="form-group">
           <%= f.field_container :wed_hrs do %>
            <%= f.label :wednesday_hours %>
            <%= f.text_field :wed_hrs, class: 'form-control', required: true %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :thu_hrs do %>
            <%= f.label :thursday_hours %>
            <%= f.text_field :thu_hrs, class: 'form-control', required: true %>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">

        <div class="form-group">
          <%= f.field_container :fri_hrs do %>
            <%= f.label :friday_hours %>
            <%= f.text_field :fri_hrs, class: 'form-control', required: true %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :sat_hrs do %>
            <%= f.label :saturday_hours %>
            <%= f.text_field :sat_hrs, class: 'form-control', required: true %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.field_container :sun_hrs do %>
            <%= f.label :sunday_hours %>
            <%= f.text_field :sun_hrs, class: 'form-control', required: true %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.field_container :pub_holiday_hrs do %>
            <%= f.label :public_holiday_hours %>
            <%= f.text_field :pub_holiday_hrs, class: 'form-control', required: true %>
          <% end %>
        </div>
      </div>
    </div>
    <br>
    
    <div class="col-md-12">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.field_container :logo_image do %>
            <%= f.label :logo %>
            <%= f.file_field :logo_image , class: 'form-control' , required: true%>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <% if @vendor.logo_image.attached? %>
            <%= image_tag(main_app.url_for(@vendor.logo_image))  %>
          <% end %>
        </div>
      </div>
    </div>
  </fieldset>

  <div class="form-actions" data-hook="buttons">
    <%= button Spree.t('actions.update'), 'save' %>
    <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), admin_vendor_settings_url, icon: 'delete' %>
  </div>

<% end %>


