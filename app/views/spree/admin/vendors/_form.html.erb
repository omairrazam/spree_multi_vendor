<%= render partial: 'spree/shared/error_messages', locals: { target: @vendor } %>
<div class="form-group">
  <%= f.field_container :name do %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  <% end %>
  <%= f.field_container :about_us do %>
    <%= f.label :about_us %>
    <%= f.text_area :about_us, class: 'form-control' %>
  <% end %>
  <%= f.field_container :contact_us do %>
    <%= f.label :contact_us %>
    <%= f.text_area :contact_us, class: 'form-control' %>
  <% end %>

  <%= f.field_container :t_distance do %>
    <%= f.label :t_distance %>
    <%= f.number_field :t_distance, class: 'form-control' %>
  <% end %>

  <%= f.field_container :address do %>
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  <% end %>

  <%= f.field_container :lat do %>
    <%= f.label :lat %>
    <%= f.number_field :lat, class: 'form-control' %>
  <% end %>

  <%= f.field_container :lng do %>
    <%= f.label :lng %>
    <%= f.number_field :lng, class: 'form-control' %>
  <% end %>

  <%= f.field_container :is_appointable do %>
    <%= f.label :is_appointable %>
    <%= f.check_box :is_appointable, class: 'form-control' %>
  <% end %>


  <%= f.field_container :state do %>
    <%= f.label :state %>
    <%= f.select :state,
      options_for_select(Spree::Vendor.state_machines[:state].states.collect { |s| [Spree.t("vendor_states.#{s.name}"), s.value] }, selected: @vendor.state),
      {}, class: 'select2' %>
  <% end %>
</div>
